<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#795548"
                android:endColor="#FFB300"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FFCC80" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FBC02D"
                android:startColor="#FFF59D"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#FF8F00" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#FFAB40"
                android:startColor="#5C6BC0"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#4527A0" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>