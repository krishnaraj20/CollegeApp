<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krishnaraj.collegeapp.ExtracurricularActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IBM"
        android:textSize="20dp"
        android:id="@+id/extrab"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_buttonss"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/extrab1"
        android:layout_marginTop="42dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPSE"
        android:textSize="20dp"
        android:id="@+id/extrab1"
        android:background="@drawable/attractivebuttons"
        android:layout_below="@+id/extrab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORACLE"
        android:background="@drawable/buttons"
        android:textSize="20dp"
        android:id="@+id/extrab11"
        android:layout_below="@+id/extrab1"
        android:layout_alignStart="@+id/extrab1"
        android:layout_marginTop="54dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IBPS"
        android:textSize="20dp"
        android:id="@+id/extrab111"
        android:background="@drawable/attractivebuttons"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/extrab11"
        android:layout_alignStart="@+id/extrab11" />
</RelativeLayout>
