<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.krishnaraj.collegeapp.AlumniActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Welcome to Vivekanandha Institutions... \n \n We are really very proud to Congrats the Students \n\n Our Management Congratulating the Achieved Students"
        android:textSize="20dp"
        android:fontFamily="times new roman"
        android:textStyle="bold"
        android:textColor="#E91E63"
        android:id="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View the Achieved Student Details"
        android:layout_below="@+id/textView8"
        android:background="@drawable/custom_buttonss"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:id="@+id/buttonss" />

</RelativeLayout>
